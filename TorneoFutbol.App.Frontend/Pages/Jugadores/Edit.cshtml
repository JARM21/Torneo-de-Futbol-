@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Jugadores.EditModel
@{
}
<h1>Actualizar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div> 
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control" placeholder="Ingrese el Nombre del Jugador">
        <span class="text-danger" asp-validation-for="jugador.Nombre"></span>
    </div>  
    <div class="form-group">
        <label asp-for="jugador.Numero"></label>
        <input asp-for="jugador.Numero" class="form-control" placeholder="Ingrese el Numero del Jugador">
        <span class="text-danger" asp-validation-for="jugador.Numero"></span>
    </div> 
    <div class="form-group">
        <label asp-for="jugador.Posicion"></label>
        <input asp-for="jugador.Posicion" class="form-control" placeholder="Ingrese la Posicion del Jugador">
        <span class="text-danger" asp-validation-for="jugador.Posicion"></span>
    </div> 
    
    <button type="submit" class="btn btn-primary btn-block">Actualizar Jugador</button> 
</form>
<br><br><a class="btn btn-secondary" asp-page="./Index">Volver</a>