@page
@model TorneoFutbol.App.Frontend.Pages.Jugadores.DetailsModel
@{
}
<h1>Detalles del Jugador</h1>
<table class="table table-striped">
        <tr>
            <th scope="col">Nombre</th>
            <td>@Model.jugador.Nombre</td>
        </tr>
        <tr>
            <th scope="col">Numero</th>
            <td>@Model.jugador.Numero</td>
        </tr>
        <tr>
            <th scope="col">Posicion</th>
            <td>@Model.jugador.Posicion</td>
        </tr>      
        <tr>
            <th scope="col">Equipo</th>
            @if (Model.jugador.Equipo == null)
            {
                <th>
                    <a class="btn btn-secondary" asp-page="./AddEquipos" asp-route-id="@Model.jugador.Id">Asignar Equipo</a>
                </th>
            }
            else
            {
                <td>@Model.jugador.Equipo.Nombre</td>
            }
            
        </tr> 
        
</table>

<a class="btn btn-secondary" asp-page="./Index">Volver</a>