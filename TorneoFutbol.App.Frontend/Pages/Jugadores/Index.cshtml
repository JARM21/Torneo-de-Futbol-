@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Jugadores.IndexModel
@{
}

<form method="get">
<div class="form-inline">
    <label class="sr-only" for="g">Filtro</label>
    <input type="text" name="g" id="g" asp-for="@Model.gActual"  class="form-control mb-2 mr-sm-2"
         placeholder="Filtrar por Nombre" />
         
        <button type="submit" class="btn btn-primary mr-sm-2 mb-2">Filtrar</button>          

</div>
    
</form>
    
<h1>Listado de Jugadores</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Numero</th>
            <th scope="col">Posicion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugador)
        {
            <tr>
                <td>@jugador.Nombre</td>
                <td>@jugador.Numero</td>
                <td>@jugador.Posicion</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@jugador.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@jugador.Id">Editar</a>
                </td>
            </tr>
        }
        
    </tbody>
    
</table>
<a class="btn btn-primary" asp-page="./Create">Crear Jugador</a>
