@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Estadios.IndexModel
@{
}

<form method="get">
<div class="form-inline">
    <label class="sr-only" for="g">Filtro</label>
    <input type="text" name="g" id="g" asp-for="@Model.gActual"  class="form-control mb-2 mr-sm-2"
         placeholder="Filtrar por Nombre" />
         
        <button type="submit" class="btn btn-primary mr-sm-2 mb-2">Filtrar</button>          

</div>
    
</form>
<h1>Listado de Estadios</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
           
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadio)
        {
            <tr>
                <td>@estadio.Nombre</td>
                <td>@estadio.Direccion</td>
            <td>
                <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@estadio.Id">Detalle</a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@estadio.Id">Editar</a>
            </td>
            </tr>
        }
        
    </tbody>
    
</table>
<a class="btn btn-primary" asp-page="./Create">Crear Estadio</a>
